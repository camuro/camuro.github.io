%h2.content-subhead Recent Works
%ul.works-list.pure-g-r
  - data.works.each do |member|
    %a{:href => member.url} 
      %li.pure-u-1-3.member<>
        .works-item
          .image
            %img{ src: "images/works/#{member.image}", alt: '#{member.alt}' }
          .text
            %p.client
              = member.client
            %p.info
              = [*member.info].join(',<br/>')


